<div class="container as-container">
    <div class="as-card-1 as-padding-space-3 as-margin-bottom-space-2">
        <form method="POST" action="?page=UKMnettverket_kommune&action=omradekontaktperson-add">
            <input type="hidden" name="omradeId" value="{{ omrade.getForeignId() }}">
            <input type="hidden" name="omradeType" value="{{ omrade.getType() }}">
            <input type="hidden" id="id" name="id" value="{{ omradekontaktperson.id }}">

            <div>
                <label for="name">Fornavn:</label>
                <input type="text" id="fornavn" name="fornavn" value="{{ omradekontaktperson.getFornavn() }}">
            </div>
            <div>
                <label for="name">Etternavn:</label>
                <input type="text" id="etternavn" name="etternavn" value="{{ omradekontaktperson.getEtternavn() }}">
            </div>
            <div>
                <label for="epost">Epost:</label>
                <input type="epost" id="epost" name="epost" value="{{ omradekontaktperson.getEpost() }}">
            </div>
            <div>
                <label for="mobil">Mobil:</label>
                <input type="text" id="mobil" name="mobil" value="{{ omradekontaktperson.getMobil() }}">
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description">{{ omradekontaktperson.getBeskrivelse() }}</textarea>
            </div>
            <div>
                <button type="submit">Lagre</button>
            </div>
        </form>
    </div>
</div>